@model IEnumerable<Product>
@{
	var flag = 0;
}
@section breadcrumbs{
	<!-- Breadcrumbs -->
	<div class="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="bread-inner">
						<ul class="bread-list">
							<li><a asp-controller="Home" asp-action="Index">Home<i class="ti-arrow-right"></i></a></li>
							<li class="active">Products</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
}
	<div class="product-area" style="margin:50px 0">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="section-title">
						<h2>Products Item</h2>
					</div>
					<div class="product-info">
						<div class="tab-content" id="myTabContent">
							<div class="tab-pane fade show active" id="man" role="tabpanel">
								<div class="tab-single">
									<div class="row">
										@foreach(var items in Model)
										{
										flag++;
										<div class="col-xl-3 col-lg-4 col-md-4 col-12">
											<div class="single-product">
												<div class="product-img">
													<a href="product-details.html">
														<div style="position: absolute;top:0;z-index: 9;background: #e6fbf9;padding: 5px;margin:5px">
															@if (items.Stock > 0)
															{
																<p style="color:#03fb03;font-size:16px;font-weight:600">Còn hàng</p>
															}
															else
															{
																<p style="color:red;font-size:16px;font-weight:600">Hết hàng</p>
															}
														</div>
														<img class="default-img" src="~/images/product/@items.Image" alt="#">
													</a>
													<div class="button-head">
														<div class="product-action-2">
															@if (items.Stock > 0)
															{
																<form asp-controller="Carts" asp-action="AddCarts" asp-route-ProductId="@items.Id">
																	<button style="border:none;background:none;font-weight:600;font-size:15px" title="ADD TO CART">ADD TO CART</button>
																</form>
															}
															else{
																<a style="background:none;font-weight:600;font-size:15px">ADD TO CART</a>
															}
														</div>
													</div>
												</div>
												<div class="product-content">
													<h3><a href="product-details.html">@items.Name</a></h3>
													<div class="product-price">
														<span>@items.Price VNĐ</span>
														@if(items.Stock>0){
														<span></span>
														}
													</div>
												</div>
											</div>
										</div>
										}
									@if (flag ==0){
										<p style="color:red;font-size:16px;font-weight:600">Không có sản phẩm nào</p>
									}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
