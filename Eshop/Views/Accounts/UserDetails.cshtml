@model Account
@section breadcrumbs{
	<!-- Breadcrumbs -->
	<div class="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="bread-inner">
						<ul class="bread-list">
							<li><a asp-controller="Home" asp-action="Index">Home<i class="ti-arrow-right"></i></a></li>
                            <li class="active">User Details <i class="ti-arrow-right"></i>Profile</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
}
 <div class="containerUser mainUser">
        <div class="leftItem">
            <div class="borderItem">
                <div class="border first">
                <a asp-action="UserDetails"><div class="items"><i class="fa-solid fa-user" style="padding-right:10px;"></i>Tài khoản</div></a>
            </div>
            <div class="border">
                    <a asp-action="Orders"><div class="items"><i class="fa-solid fa-cart-shopping" style="padding-right:10px"></i>Lịch sử đơn hàng</div></a>
            </div>
            <div class="border last">
                    <a asp-action="ChangePassUser"><div class="items"><i class="fa-solid fa-user-lock" style="padding-right:10px"></i>Mật khẩu và bảo mật</div></a>
            </div>
        </div>
        </div>
        <div class="rightItem">
            <div>
                <h4>Tổng Quan</h4>
                <div class="containerUser info">
                    <div class="item">
                        <div class="title">Tên Đăng nhập</div>
                        <div class="data">@Model.Username</div>
                    </div>
                    <div class="item">
                        <div class="title">Email</div>
                        <div id="email" class="data">@Model.Email</div>
                    </div>
                    <div class="item">
                        <div class="title">Họ và tên</div>
                        <div class="data">@Model.FullName</div>
                    </div>
                    <div class="item">
                        <div class="title">Bought</div>
                        <div class="data">1000000 VNĐ</div>
                    </div>
                </div>
            </div>
            <div class="line"></div>
            <div class="avatar">
                <div class="containerUser">
                    <img src="~/images/avatar/@Model.Avatar" alt="Ảnh đại diện">
                    <div class="containerUser form">
                        <form enctype="multipart/form-data" class="formavatar" asp-action="uploadAvatar">
                            <input type="hidden" asp-for="Id"/>
                            <fieldset>
                                <input style="display:block;width:28%;margin-bottom:15px" asp-for="ImageFile" type="file" accept="image/*" required>
                                <button style="width:50%" type="submit">Sửa ảnh đại diện</button>
                            </fieldset>
                        </form>
                        <div class="lineavatar"></div>
                    </div>
                </div>
            </div>
            <div class="line"></div>
            <form class="Edit" asp-action="UserDetails">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="Avatar" />
                <input type="hidden" asp-for="Password"/>
                <input type="hidden" asp-for="IsAdmin"/>
                <input type="hidden" asp-for="Status" />
                <fieldset>
                    <h4>Preson</h4>
                    <div class="editU">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="editU">
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="editU">
                        <label asp-for="Address"></label>
                        <input asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </fieldset>
            
            <label class="check">
                <input type="checkbox" name="public" value="1" checked>
                <div>Đồng ý lưu thông tin</div>
            </label>
            <button type="submit" class="btn">Save</button>
            </form>
        </div>
    </div>
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}